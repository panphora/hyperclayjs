{
  "name": "hyperclayjs",
  "version": "1.2.0",
  "description": "Modular JavaScript library for building interactive HTML applications with Hyperclay",
  "type": "module",
  "main": "hyperclay.js",
  "module": "hyperclay.js",
  "exports": {
    ".": {
      "import": "./hyperclay.js",
      "default": "./hyperclay.js"
    },
    "./core/*": "./core/*.js",
    "./custom-attributes/*": "./custom-attributes/*.js",
    "./ui/*": "./ui/*.js",
    "./utilities/*": "./utilities/*.js",
    "./dom-utilities/*": "./dom-utilities/*.js",
    "./string-utilities/*": "./string-utilities/*.js",
    "./communication/*": "./communication/*.js",
    "./vendor/*": "./vendor/*.js"
  },
  "files": [
    "core",
    "custom-attributes",
    "ui",
    "utilities",
    "dom-utilities",
    "string-utilities",
    "communication",
    "vendor",
    "hyperclay.js",
    "module-dependency-graph.json"
  ],
  "scripts": {
    "dev": "npm run build && http-server -p 3535 -o /index.html",
    "build": "npm run generate:deps && npm run build:loader && npm run build:readme && npm run build:load-jsdelivr && npm run build:index-url",
    "generate:deps": "node build/generate-dependency-graph.js",
    "build:loader": "node build/build-loader.js",
    "build:readme": "node build/generate-readme.js",
    "build:load-jsdelivr": "node build/generate-load-jsdelivr.js",
    "build:index-url": "node build/update-index-url.js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "release": "./scripts/release.sh",
    "prepublishOnly": "npm run build && npm test",
    "postpublish": "test -n \"$SKIP_POSTPUBLISH\" || open http://127.0.0.1:3535/load-jsdelivr.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyperclay/hyperclayjs.git"
  },
  "keywords": [
    "hyperclay",
    "html",
    "interactive",
    "save",
    "admin",
    "modular",
    "frontend",
    "dom",
    "ui"
  ],
  "author": "Hyperclay",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hyperclay/hyperclayjs/issues"
  },
  "homepage": "https://github.com/hyperclay/hyperclayjs#readme",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@jest/globals": "^30.2.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-terser": "^0.4.0",
    "babel-jest": "^30.2.0",
    "eslint": "^8.50.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.2.0",
    "madge": "^8.0.0",
    "open-cli": "^8.0.0",
    "prettier": "^3.0.0",
    "rollup": "^4.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "Chrome >= 90",
    "Firefox >= 88",
    "Safari >= 14",
    "Edge >= 90"
  ]
}
